<script>
    const ROOM_ID = "<%= roomId %>"
    //console.log("<%= roomId %>");
</script>
<body> 
<div class="main">
    <div class="main__left">
        <div class ="main_vedios">
            <div id="video-grid">
            </div>
        </div>
        <div class ="main__controls">
            <div class="main_controls_blocks">
                <div class="main_controls_button" onclick="muteUnmute()">
                    <i class="fas fa-microphone-alt-slash"></i>
                    <span>Mute</span>                                   
                </div>

                <div class="main_controls_button">
                    <i class="fas fa-stop-circle"></i>
                    <span>Stop Vedio</span>
                </div>
            </div>

        </div>
        <div class ="main__controls">
            <div class="main_controls_blocks">
                <div class="main_controls_button">
                    <i class="fas fa-shiled-alt"></i>
                    <span>Security</span>                 
                </div>

                <div class="main_controls_button">
                    <i class="fas fa-user-friends"></i>
                    <span>Participants</span>
                   
                </div>

                <div class="main_controls_button">
                    <i class="fas fa-comment-alt"></i>
                    <span>Chat</span>
                </div>
            </div>

            <div class="main_controls_blocks">
                <div class="main_controls_button">
                    <i class="fas fa-shiled-alt"></i>
                    <span class="leave-meeting">Leave Meeting</span>                 
                </div>
            </div >  

        </div>
    </div>

    <div class="main__right">
        <div class="main__header">
            <h6>Chats</h6>
        </div>
        <div class="main_chat_window">
            <ul class="messages"></ul>

        </div>

        <div class="main_message_container">
            <input type="text" placeholder="Type Your Message Here" id="chat_message">
        </div>

    </div>

   
</div>

    <script src="script.js"></script>
